---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="services">
  <div>
    <div class="text-3xl w-full font-bold mb-5">My Services</div>
  </div>

  <HorizontalCard
    title="Iphone and Andriod Repair "
    img="/post_img.webp"
    desc="Screen replacement, battery swaps, water damage fixes, and more..."
    badge="NEW"
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Laptop Repair"
    img="/post_img.webp"
    desc="Hardware upgrades, board-level repairs, OS optimization."
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="General Electronics"
    img="/post_img.webp"
    desc="Audio systems, home appliances, circuit troubleshooting."
    url="#"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Solar Installation"
    img="/post_img.webp"
    desc="Small-scale home and office setups, maintenance, upgrades."
    url="#"
  />
</BaseLayout>
